{
  "Main": {
    "uid": {
      "type": "UID",
      "config": {
        "label": "uid",
        "placeholder": "UID"
      }
    },
    "title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1, heading2, heading3, heading4, heading5, heading6",
        "label": "title",
        "placeholder": "Title"
      }
    },
    "date": {
      "type": "Date",
      "config": {
        "label": "date",
        "placeholder": "Date"
      }
    },
    "abstract": {
      "type": "StructuredText",
      "config": {
        "multi": "paragraph, preformatted, heading1, heading2, heading3, heading4, heading5, heading6, strong, em, hyperlink, image, embed, list-item, o-list-item, o-list-item",
        "allowTargetBlank": true,
        "label": "Introduction",
        "placeholder": "Introduction to article. Appears next to title in post"
      }
    },
    "main_image": {
      "type": "Image",
      "config": {
        "constraint": {
          "width": 1400
        },
        "thumbnails": [
          {
            "name": "900",
            "width": 900,
            "height": null
          },
          {
            "name": "400",
            "width": 400,
            "height": null
          },
          {
            "name": "2400",
            "width": 2400,
            "height": null
          }
        ],
        "label": "Main Image"
      }
    },
    "thumbnail_image": {
      "type": "Image",
      "config": {
        "constraint": {
          "width": 1200
        },
        "thumbnails": [
          {
            "name": "portrait",
            "width": 900,
            "height": 1500
          },
          {
            "name": "landscape",
            "width": 900,
            "height": 600
          }
        ],
        "label": "Thumbnail (Optional)"
      }
    },
    "related_journals": {
      "type": "Group",
      "config": {
        "fields": {
          "entry": {
            "type": "Link",
            "config": {
              "select": "document",
              "customtypes": ["journal"],
              "label": "Entry"
            }
          }
        },
        "label": "Related Journals"
      }
    },
    "body": {
      "type": "Slices",
      "fieldset": "Slice zone",
      "config": {
        "choices": {
          "image_block": {
            "type": "Slice",
            "fieldset": "Image Block",
            "description": "Add one or more images",
            "icon": "image",
            "display": "list",
            "non-repeat": {},
            "repeat": {
              "img": {
                "type": "Image",
                "config": {
                  "constraint": {
                    "width": 1200
                  },
                  "thumbnails": [
                    {
                      "name": "md",
                      "width": 1200,
                      "height": null
                    },
                    {
                      "name": "lg",
                      "width": 2400,
                      "height": null
                    }
                  ],
                  "label": "Image"
                }
              },
              "layout": {
                "type": "Select",
                "config": {
                  "options": ["Full-Width", "Half-Width"],
                  "default_value": "Full-Width",
                  "label": "Layout"
                }
              },
              "desc": {
                "type": "StructuredText",
                "config": {
                  "single": "paragraph, em",
                  "label": "Description"
                }
              }
            }
          },
          "text_block": {
            "type": "Slice",
            "fieldset": "Text Block",
            "description": "Add a block of text",
            "icon": "format_color_text",
            "display": "list",
            "non-repeat": {
              "text": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph, heading2, heading3, heading4, heading5, heading6, strong, em, hyperlink, image, embed, list-item, o-list-item",
                  "allowTargetBlank": true,
                  "label": "Text",
                  "placeholder": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                }
              }
            },
            "repeat": {}
          },
          "hero_image": {
            "type": "Slice",
            "fieldset": "(Deprecated ) Hero Image",
            "description": "Do not use",
            "icon": "format_shapes",
            "display": "list",
            "non-repeat": {
              "title1": {
                "type": "StructuredText",
                "config": {
                  "single": "heading1, heading2, heading3, heading4, heading5, heading6",
                  "label": "title",
                  "placeholder": "Title"
                }
              }
            },
            "repeat": {
              "hero_image": {
                "type": "Image",
                "config": {
                  "constraint": {},
                  "thumbnails": [],
                  "label": "hero_image"
                }
              },
              "hero_description": {
                "type": "StructuredText",
                "config": {
                  "single": "heading1, heading2, heading3, heading4, heading5, heading6",
                  "label": "hero_description",
                  "placeholder": "Hero Description"
                }
              },
              "hero_note": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph, preformatted, heading1, heading2, heading3, heading4, heading5, heading6, strong, em, hyperlink, image, embed, list-item, o-list-item, o-list-item",
                  "allowTargetBlank": true,
                  "label": "hero_note",
                  "placeholder": "Hero Note"
                }
              }
            }
          },
          "post_gallery": {
            "type": "Slice",
            "fieldset": "(Deprecated) Post Gallery",
            "description": "Do not use",
            "icon": "linked_camera",
            "display": "list",
            "non-repeat": {
              "gallery_name": {
                "type": "StructuredText",
                "config": {
                  "single": "heading1, heading2, heading3, heading4, heading5, heading6",
                  "label": "gallery_name",
                  "placeholder": "Gallery Name"
                }
              }
            },
            "repeat": {
              "gallery_image": {
                "type": "Image",
                "config": {
                  "constraint": {},
                  "thumbnails": [],
                  "label": "gallery_image"
                }
              },
              "gallery_image_description": {
                "type": "StructuredText",
                "config": {
                  "single": "heading1, heading2, heading3, heading4, heading5, heading6",
                  "label": "gallery_image_description",
                  "placeholder": "Image Description"
                }
              }
            }
          }
        }
      }
    }
  },
  "Sound System": {
    "version": {
      "type": "Number",
      "config": {
        "label": "Version",
        "placeholder": "12"
      }
    },
    "spotify_link": {
      "type": "Embed",
      "config": {
        "label": "Spotify Link (Required)",
        "placeholder": "https://open.spotify.com/playlist/..."
      }
    }
  }
}
